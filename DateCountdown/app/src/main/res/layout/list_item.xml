<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/con_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kate's Wending"
        android:textSize="18sp"
        android:padding="5dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/con_envent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stellenbosh, South Africa"
        android:layout_below="@+id/con_title"
        android:paddingLeft="15dp"
        />
    <TextView
        android:id="@+id/con_timecoundownt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54 day remaining"
        android:layout_below="@+id/con_envent"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />
    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>